<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="13dp"
    android:layout_marginTop="15dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/eventNameFieldV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="event_name"
            android:textAlignment="center"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/my2"/>
        <TextView
            android:id="@+id/dateField1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="date"
            android:textSize="20sp"
            android:textStyle="italic"
            android:textColor="@color/white"
            android:background="@color/my2"/>

        <TextView
            android:id="@+id/directionField1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="direction"
            android:textSize="20sp"
            android:textStyle="italic"
            android:textColor="@color/white"
            android:background="@color/my2"/>

        <TextView
            android:id="@+id/organizerField1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="organizer"
            android:textSize="20sp"
            android:textStyle="italic"
            android:textColor="@color/white"
            android:background="@color/my2"/>

        <TextView
            android:id="@+id/placeField1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="place"
            android:textSize="20sp"
            android:textStyle="italic"
            android:textColor="@color/white"
            android:background="@color/my2"/>
        <TextView
            android:id="@+id/idField1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="id"
            android:textSize="20sp"
            android:textStyle="italic"
            android:textColor="@color/white"
            android:background="@color/my2"/>


    </LinearLayout>
</androidx.cardview.widget.CardView>